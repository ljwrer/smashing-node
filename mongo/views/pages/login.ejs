<% include ../partials/header.ejs %>
<div>
    <form enctype="application/x-www-form-urlencoded" method="post" action="/login">
        <fieldset>
            <p>
                <label>email</label>
                <input type="email" name="user[email]"
                <% if(email){ %>
                    value="<%= email %>"
                <% } %>
                />
            </p>
            <p>
                <label>password</label>
                <input type="password" name="user[password]">
            </p>
            <button>login</button>
        </fieldset>
    </form>
    <a href="/">go back</a>
</div>
